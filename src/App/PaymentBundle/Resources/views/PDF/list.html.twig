<body class="login-page">
<h3>Raport Płatności</h3>
<table class="table table-striped">
    <tr>
        <td style="padding:10px;">Id</td>
        <td>Typ</td>
        <td>Kwota</td>
        <td>Imię i nazwisko</td>
        <td>Miato</td>
        <td>Ulica</td>
        <td>Status</td>
        <td>Sygnatura</td>
        <td>Login</td>
        <td>Data</td>
    </tr>
{% for payment in payments %}
    <tr>
        <td>{{payment.id}}</td>
        <td>{{paymentName(payment.paymentMethod)}}</td>
        <td>{{payment.value}}</td>
        <td>{{payment.firstName}} {{payment.lastName}}</td>
        <td>{{payment.zipCode}},{{payment.city}}</td>
        <td>{{payment.address}}</td>
        <td>{{paymentStateName(payment.state)}}</td>
        <td>{% if payment.offer is not null %}{{payment.offer.signature}}{% endif %}</td>
        <td>{% if payment.user is not null %}{{payment.user.username}}{% endif %}</td>
        <td>{{payment.createDate | date('d.m.Y H:i:s')}}</td>
    </tr>
{% endfor %}
</table>
</body>

    <div id="card-payment-info" {% if payment.paymentMethod =='sms' %}style="display:none;"{% endif %}>
    <h1>Uzupełnij swoje dane do przelewu</h1>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label>Osobowość prawna: </label>
                {{form_widget(form.legalPersonality[0])}}
                {{form_widget(form.legalPersonality[1])}}
            </div>
        </div>
    </div>
    <h2>Dane Płatnika</h2>
    <div id="card-payment-info-company" class="row" style="display:none;">
        <div class="col-md-12">
            <div class="form-group">
                <label>Czy podmiot jest płatnikiem podatku VAT?*</label>
                {{form_widget(form.VAT[0])}}
                {{form_widget(form.VAT[1])}}
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>Nazwa*</label>
                {{form_widget(form.name,{'attr':{'class':'form-control','data-validator':'required'}})}}
                {{form_errors(form.name)}}
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>NIP*</label>
                {{form_widget(form.NIP,{'attr':{'class':'form-control','data-validator':'required'}})}}
                {{form_errors(form.NIP)}}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label>Imię*</label>
                {{form_widget(form.firstName,{'attr':{'class':'form-control','data-validator':'required'}})}}
                {{form_errors(form.firstName)}}
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>Nazwisko*</label>
                {{form_widget(form.lastName,{'attr':{'class':'form-control','data-validator':'required'}})}}
                {{form_errors(form.lastName)}}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label>Email*</label>
                {{form_widget(form.email,{'attr':{'class':'form-control','data-validator':'required,email'}})}}
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>Telefon</label>
                {{form_widget(form.phone,{'attr':{'class':'form-control'}})}}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label>Państwo*</label>
                {{form_widget(form.country,{'attr':{'class':'form-control','data-validator':'required'}})}}
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>Ulica, nr budynku i lokalu*</label>
                {{form_widget(form.address,{'attr':{'class':'form-control','data-validator':'required'}})}}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label>Kod pocztowy*</label>
                {{form_widget(form.zipCode,{'attr':{'class':'form-control','data-validator':'required'}})}}
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>Miasto*</label>
                {{form_widget(form.city,{'attr':{'class':'form-control','data-validator':'required'}})}}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8"><img src="{{asset('front-layout/gfx/logo_przelewy24_300.png')}}" alt="płatności obsługuje przelewy 24" class="payments-logo"/></div>
    </div>
    </div>
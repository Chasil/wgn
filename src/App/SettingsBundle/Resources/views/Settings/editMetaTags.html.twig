{% extends "AppBackOfficeBundle:_Partials:layout.html.twig" %}
{% block body %}
    <section class="content-header">
      <h1>
        Ustawienia Meta Dane
      </h1>
      <ol class="breadcrumb">
        <li><a href="#" title="Dashboard"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <li><a href="#" title="Ustawienia">Ustawienia</a></li>
        <li class="active">Meta Dane</li>
      </ol>
    </section>
    <section class="content">
        <div class="row">
            {% include 'AppBackOfficeBundle:_Partials:flashMessage.html.twig' %}
            <div class="col-md-12">
                <form method="POST" action="" novalidate enctype="multipart/form-data">
          <!-- general form elements -->
                <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Treść</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->

              <div class="box-body">
                    <div class="form-group">
                        <label>Tytuł strony</label>
                        {{form_widget(form.pageTitle)}}
                        {{form_errors(form.pageTitle)}}
                    </div>
                    <div class="form-group">
                        <label>Nagłówek h1</label>
                        {{form_widget(form.h1)}}
                        {{form_errors(form.h1)}}
                    </div>
                    <div class="form-group">
                        <label>Opis strony (meta description)</label>
                        {{form_widget(form.metaDescription)}}
                        {{form_errors(form.metaDescription)}}
                    </div>
                    <div class="form-group">
                        <label>Słowa kluczowe (meta keywords)</label>
                        {{form_widget(form.metaKeywords)}}
                        {{form_errors(form.metaKeywords)}}
                    </div>
                    <div class="form-group">
                        <label>Text strony głównej</label>
                        {{form_widget(form.pageDescription,{'attr':{'class':'texteditor'}})}}
                        {{form_errors(form.pageDescription)}}
                    </div>
                    <div class="form-group">
                        <label>Text strony głównej - Archiwum</label>
                        {{form_widget(form.pageArchiveDescription,{'attr':{'class':'texteditor'}})}}
                        {{form_errors(form.pageArchiveDescription)}}
                    </div>
                    {{form_rest(form)}}
              <!-- /.box-body -->
              <div class="box-footer">
                <button type="submit" class="btn btn-primary">Zapisz</button>
              </div>
          </div>
          <!-- /.box -->
        </div>
            </div>
        </div>
    </section>
{% endblock body %}
{% block javascripts %}
     <script src="{{asset('admin-layout/plugins/tinymce/tinymce.min.js')}}"></script>
    {{ elfinder_tinymce_init4() }}
    <script type="text/javascript">
    tinymce.init({
        language : 'pl',
        file_browser_callback : elFinderBrowser,
        image_advtab: true,
        mode : "textareas",
        entity_encoding : "raw",
        selector: ".texteditor",
        plugins: [
            "advlist autolink lists link image lists charmap print preview hr anchor",
            "searchreplace wordcount visualblocks visualchars code fullscreen insertdatetime media nonbreaking",
            "table contextmenu directionality emoticons template textcolor paste colorpicker textpattern"
        ],
        toolbar1: "bold italic underline strikethrough | alignleft aligncenter alignright alignjustify | styleselect formatselect fontselect fontsizeselect ",
        toolbar2: "insertfile undo redo | cut copy paste searchreplace| | bullist numlist outdent indent| bullist numlist | outdent indent blockquote | undo redo | link unlink anchor image media code | insertdatetime preview",
        toolbar3: "forecolor backcolor| table | hr removeformat | subscript superscript | charmap emoticons | print fullscreen | ltr rtl | visualchars visualblocks nonbreaking",
        fontsize_formats: "10pt 12pt 14pt 18pt 24pt 36pt",
    });
    </script>
{% endblock %}

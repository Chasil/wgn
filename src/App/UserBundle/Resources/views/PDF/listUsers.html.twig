<body class="login-page">
<h3>Raport Użytkowników</h3>
<table class="table table-striped">
    <tr>
        <td style="padding:10px;">Login</td>
        <td>Email</td>
        <td>Typ</td>
        <td>Imię i nazwisko</td>
        <td>Status</td>
        <td>Ostatnie logowanie</td>
        <td>Ostatnie IP</td>
    </tr>
{% for user in users %}
    <tr>
        <td>{{user.username}}</td>
        <td>{{user.email}}</td>
        <td>{{roleName(user.roles[0])}}</td>
        <td>{{user.firstName}} {{user.lastName}}</td>
        <td>{% if user.lastActivity is not null %}{% if isOnline(user.lastActivity) %}online{% else %}offline{% endif %}{% endif %}</td>
        <td>{% if user.lastLogin is not null %}{{user.lastLogin | date('d.m.Y G:i:s')}}{% endif %}</td>
        <td>{{user.lastLoginIp}}</td>
    </tr>
{% endfor %}
</table>
</body>

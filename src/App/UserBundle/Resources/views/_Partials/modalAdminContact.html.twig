 <div class="modal fade" id="modal-admin-contact" tabindex="-1" role="dialog" aria-labelledby="modal-admin-contact" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Pytanie do admina ?</h4>
            </div>
            <div class="modal-body">
                               <div class="row">
                    <div class="col-md-12 col-xs-12" id="contact-form">
                        <form action="#" method="POST" novalidate>
                        <h4 class="col-md-12 form-header">Formularz kontaktowy</h4>
                        <div class="form-container">
                            <div class="form-group col-md-8 col-xs-12">
                                {{form_widget(form.subject,{'attr':{'data-validator':'required','placeholder':'nadaj temat wiadomości'}})}}
                            </div>
                            <div class="form-group col-md-8 col-xs-12">
                                {{form_widget(form.name,{'attr':{'data-validator':'required','placeholder':'Imię i nazwisko / firma'}})}}
                            </div>
                            <div class="form-group col-md-12 col-xs-12">
                                {{form_widget(form.message,{'attr':{'data-validator':'required','placeholder':'Treść wiadomości'}})}}
                            </div>
                            <div class="form-group col-md-12 col-xs-12 button">
                                <button type="submit" class="btn btn-success pull-right">Wyślij</button>
                            </div>
                            {{form_rest(form)}}
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

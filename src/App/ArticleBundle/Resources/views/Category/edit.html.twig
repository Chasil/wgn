{% extends "AppBackOfficeBundle:_Partials:layout.html.twig" %}
{% block body %}
    <section class="content-header">
      <h1>
        Edycja Kategorii - {{category.name}}
      </h1>
      <ol class="breadcrumb">
        <li><a href="#" title="Dashboard"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <li><a href="#" title="Cms">Cms</a></li>
        <li class="active">Kategorie</li>
      </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <form method="POST" action="" novalidate enctype="multipart/form-data">
          <!-- general form elements -->
                <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Treść</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->

              <div class="box-body">
                    <div class="form-group">
                        <label>Nazwa</label>
                        {{form_widget(form.name)}}
                    </div>
                    <div class="form-group">
                        {{form_widget(form.disallowRobots)}}
                    </div>
                    <div class="form-group">
                        <label>Atrybut rel</label>
                        {{form_widget(form.followAttribute)}}
                    </div>
                  <div class="form-group">
                      <label>Meta Tytuł</label>
                      {{form_widget(form.metaTitle,{'attr':{'class':'form-control'}})}}
                  </div>
                    <div class="form-group">
                        <label>Meta Opis</label>
                        {{form_widget(form.metaDesc,{'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="form-group">
                        <label>Słowa Kluczowe</label>
                        {{form_widget(form.metaKeywords,{'attr':{'class':'form-control'}})}}
                    </div>
                    {{form_rest(form)}}
              <!-- /.box-body -->
              <div class="box-footer">
                <button type="submit" class="btn btn-primary">Zapisz</button>
              </div>
          </div>
          <!-- /.box -->
        </div>
            </div>
        </div>
    </section>
{% endblock body %}
{% block javascripts %}
    <script src="{{asset('admin-layout/plugins/tinymce/tinymce.min.js')}}"></script>
    {{ elfinder_tinymce_init4() }}
    <script type="text/javascript">
    tinymce.init({
        language : 'pl',
        file_browser_callback : elFinderBrowser,
        image_advtab: true,
        mode : "textareas",
        selector: ".texteditor",
        plugins: [
            "advlist autolink lists link image charmap print preview anchor",
            "searchreplace visualblocks code fullscreen",
            "insertdatetime media table contextmenu paste"
        ],
        toolbar: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image",
        fontsize_formats: "10pt 12pt 14pt 18pt 24pt 36pt",
    });

    </script>
{% endblock %}

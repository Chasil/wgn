{% extends "AppBackOfficeBundle:_Partials:layout.html.twig" %}
{% block body %}
    <section class="content-header">
      <h1>
        Nowy Kategoria
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard" title="Dashboard"></i> Dashboard</a></li>
        <li><a href="#" title="Cms">Cms</a></li>
        <li class="active">Kategorie</li>
      </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <form method="POST" action="" novalidate enctype="multipart/form-data">
          <!-- general form elements -->
                <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Treść</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->

              <div class="box-body">
                    <div class="form-group">
                        <label>Nazwa</label>
                        {{form_widget(form.name)}}
                    </div>
                    <div class="form-group">
                        <label>Unikalny Klucz</label>
                        {{form_widget(form.uniqKey)}}
                    </div>
                    <div class="form-group">
                        <label>Opis</label>
                        {{form_widget(form.description)}}
                    </div>
                    <div class="form-group">
                        <label>Sposób wyświetlania banerów</label>
                        {{form_widget(form.mode)}}
                    </div>
                    <div class="form-group">
                        <label>Ilość wyświetlanych</label>
                        {{form_widget(form.adsLimit)}}
                    </div>
                    <div class="form-group">
                        <label>Opublikowany</label>
                        {{form_widget(form.isPublish)}}
                    </div>
                    <div class="form-group">
                        <label>Pokaż na urządeniach mobilnych</label>
                        {{form_widget(form.isMobileSupported)}}
                    </div>
                    {{form_rest(form)}}
              <!-- /.box-body -->
              <div class="box-footer">
                <button type="submit" class="btn btn-primary">Zapisz</button>
              </div>
          </div>
          <!-- /.box -->
        </div>
            </div>
        </div>
    </section>
{% endblock body %}
{% block javascripts %}{% endblock %}

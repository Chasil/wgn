{% include 'AppOfferBundle:_Partials:formPartLocationData.html.twig' %}
{% if transaction.id == 2 or transaction.id==4 %}
    {% set required = false %}
{% else %}
    {% set required = true %}
{% endif %}
<div class="row offer-data">
    <div class="col-md-4 offset-top">
        <div class="form-group">
            <label>Rynek{% if required %}*{%endif %}</label>
            {% if required %}
                {{form_widget(form.typeProperties.market,{'attr':{'data-validator':'required'}})}}
            {% else %}
                {{form_widget(form.typeProperties.market)}}
            {%endif %}
            {{form_errors(form.typeProperties.market)}}
        </div>
        <div class="form-group offset-top">
            <label>Rok Budowy</label>
            {{form_widget(form.typeProperties.yearOfBuilding)}}
            {{form_errors(form.typeProperties.yearOfBuilding)}}
        </div>
        <div class="form-group">
            <label>Stan techniczny</label>
            {{form_widget(form.typeProperties.technicalCondition)}}
            {{form_errors(form.typeProperties.technicalCondition)}}
        </div>
    </div>
     <div class="col-md-4 offset-top">
        <div class="form-group">
            <label>Liczba kondygnacji w budynku</label>
            {{form_widget(form.typeProperties.storeys)}}
            {{form_errors(form.typeProperties.storeys)}}
        </div>
        <div class="form-group">
            <label>Stan prawny działki</label>
            {{form_widget(form.typeProperties.legalStatus)}}
            {{form_errors(form.typeProperties.legalStatus)}}
        </div>
        <div class="form-group">
            <label>Nieruchomość dostępna od</label>
            {{form_widget(form.typeProperties.availableFrom)}}
            {{form_errors(form.typeProperties.availableFrom)}}
        </div>
    </div>
     <div class="col-md-4">
        {% include 'AppOfferBundle:_Partials:formPartPromoState.html.twig' %}
        <div class="form-group">
            <label>Dojazd</label>
            {{form_widget(form.typeProperties.accessRoad)}}
            {{form_errors(form.typeProperties.accessRoad)}}
        </div>
    </div>
</div>
{% include 'AppOfferBundle:_Partials:formPartMedia.html.twig' %}